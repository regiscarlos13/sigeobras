<div class="p-5" data-controller='select2'>
  <%= simple_form_for(@additive, 
  wrapper: :horizontal_form) do |f| %>
    <%= show_message(@additive) %>
    <div class="container text-center">
      <div class="row">
        <div class="col-3">
          <%= f.input :data, as: :string,  input_html: {type: 'date'} %>
        </div>
        <div class="col-4">
          <%= f.input :valor %>
        </div>
        <div class="col">
          <%= f.association :construction, prompt: false %>
        </div>
      </div>
    </div>
    <hr>
    <%= btn_save %>  <%  @btn_new = btn_cancel(additives_path) %>
  <% end %>
</div>
