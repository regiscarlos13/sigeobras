  <style>
  .fonte {
    font-size: 25px;
  }
</style>
<div class='mb-2 text-center'>
  <strong class='fonte'>Relação de Obras </strong>
</div>
<div class="table-responsive">
  <%= table_for(@constructions) do %>
    <% field_table(@constructions.model.human_attribute_name('description'))  { |f| f.description} %>
    <% field_table(@constructions.model.human_attribute_name('dt_start'))  { |f| l f.dt_start } %>
    <% field_table(@constructions.model.human_attribute_name('dt_end'))  { |f| l f.dt_end } %>
    <% field_table(@constructions.model.human_attribute_name('valor'))  { |f| number_to_currency(f.valor) } %>
    <% field_table(@constructions.model.human_attribute_name('final'))  { |f| t f.final } %>
    <% field_table(@constructions.model.human_attribute_name('percetage'))  { |f|  "#{f.percetage} %" } %>
  <% end %>
</div>
<hr>
<div class="col-5">
  <table >
    <tbody>
      <tr>
        <td>
          <strong>Finalizadas: </strong>
        </td>
        <td>
          <%= @constructions.final_true.count %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>Não finalizadas: </strong>
        </td>
        <td>
          <%= @constructions.final_false.count %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>Total Obras: </strong>
        </td>
        <td>
          <%= @constructions.count %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>Valor total: </strong>
        </td>
        <td>
          <%=number_to_currency( @constructions.sum(:valor)) %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
