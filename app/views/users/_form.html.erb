<%= simple_form_for(@user, defaults: { input_html: { class: "form-control-sm" }, label_html: { class: "col-form-label col-form-label-sm" } }) do |f| %>
   
	     <%= show_message(@user) %>

	 
	  <div data-controller='select2'>
            <div class='row'>
                <div class='col'>
                    <%= f.input :name %>
                    <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" } %>
                    <%= f.input :role, collection: [:admin, :user], prompt: false %>
                </div>
                <div class='col'>
                    <%= f.input :password, required: false, hint: (t("devise.shared.minimum_password_length", count: @minimum_password_length) if @minimum_password_length),
                                           input_html: { autocomplete: "new-password" } %>
                    <%= f.input :password_confirmation, required: false, input_html: { autocomplete: "new-password" } %>
											<%= f.hidden_field :company_id, value: current_user.company.id%>
                </div>
            </div>
    </div>
    <hr>
    <%= btn_save %> | <%= btn_cancel(users_path) %>
<% end %>